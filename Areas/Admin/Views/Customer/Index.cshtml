@model IEnumerable<ABCRetail_Project1.Models.CustomerEntity>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customer Profile</h2>
<a asp-action="Create" class="btn btn-primary">Add New Customer</a>

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Country</th>
            <th style="text-align:right;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.RowKey</td>
                <td>@customer.FullName</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Address</td>
                <td>@customer.Country</td>

                <td style="text-align:right;">
                    <form asp-action="Delete" asp-route-RowKey="@customer.RowKey" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete @customer.FullName?');">
                            Delete
                        </button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

